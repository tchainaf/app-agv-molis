<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Cadastro"
             x:Class="app_agv_molis.Views.SignupFormPage">
    <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
        <Label Text="Nome" FontSize="Medium" />
        <Entry Text="{Binding Nome, Mode=TwoWay}" FontSize="Medium" />

        <Label Text="Email" FontSize="Medium" />
        <Entry Text="{Binding Email, Mode=TwoWay}" FontSize="Medium" />

        <Label Text="Senha" FontSize="Medium" />
        <Entry Text="{Binding Senha, Mode=TwoWay}" FontSize="Medium" />

        <Label Text="Departamento" FontSize="Medium" />
        <Entry Text="{Binding Departamento, Mode=TwoWay}" FontSize="Medium" />

        
        <Label Text="Senha" FontSize="Medium" />
        <Editor Text="{Binding Senha, Mode=TwoWay}" AutoSize="TextChanges" FontSize="Medium" Margin="0" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Cadastrar" Command="{Binding SaveNewUserCommand}" HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Cancelar" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>
